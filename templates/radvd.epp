<%- | String        $interface,
      Array[String] $subnet6,
| -%>
interface <%= $interface %> {
  AdvSendAdvert on;
  AdvLinkMTU 1312;
<% if $dnsserver1 { -%>
  RDNSS $dnsserver1<%= if $dnsserver2 { " ${dnsserver2}" } else { '' } %> {};
<% } -%>
<% $subnet6.each | $value | { -%>
  prefix <%= ip_network($value, 0) %> {};
<% } -%>
};

